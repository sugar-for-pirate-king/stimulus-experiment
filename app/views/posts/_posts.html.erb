<% if posts.any? %>
  <table class="table">
    <tr>
      <th>#</th>
      <th>Title</th>
    </tr>

    <% posts.each.with_index(1) do |post, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= post.title %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p>No posts provided.</p>
<% end %>